{
  "name": "restate-ts-template",
  "version": "0.0.1",
  "description": "Template for JavaScript/TypeScript services running with Restate (https://github.com/restatedev/) ",
  "main": "app.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc --noEmitOnError",
    "app": "node ./dist/app.js",
    "app-dev": "tsx watch ./src/app.ts",
    "client": "KEY=0 tsx watch ./src/client.ts",
    "client2": "KEY=1 tsx watch ./src/client.ts",
    "client3": "KEY=2 tsx watch ./src/client.ts"
  },
  "dependencies": {
    "@restatedev/restate-sdk": "^1.4.0",
    "@restatedev/restate-sdk-clients": "^1.4.0",
    "chalk": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "esbuild": "^0.21.5",
    "tsx": "^4.19.2",
    "typescript": "^5.4.5"
  }
}
